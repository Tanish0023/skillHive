<div class="m-5 recruiter-login-vh">
  <h1 class="mt-5 mb-4 header">Update Job</h1>

  <form action="/update-job/<%= job.id %>" method="post">
    <div class="mb-3">
      <label for="category" class="form-label">Select Category</label>
      <select id="category" class="form-select" id="category" name="category">
        <option value="<%= job.category %>">Tech</option>
        <option value="<%= job.category %>">Non-Tech</option>
      </select>
    </div>

    <div class="d-flex flex-wrap">
      <div class="mb-3 flex-fill">
        <label for="designation" class="form-label">Designation</label>
        <input
          type="text"
          class="form-control"
          id="designation"
          name="designation"
          value="<%= job.designation %>"
        />
      </div>

      <div class="mb-3 flex-fill">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="location"
          value="<%= job.location %>"
        />
      </div>
    </div>

    <div class="mb-3">
      <label for="companyName" class="form-label">Company Name</label>
      <input
        type="text"
        class="form-control"
        id="companyName"
        name="companyName"
        value="<%= job.companyName %>"
      />
    </div>

    <div class="d-flex flex-wrap">
      <div class="mb-3 flex-fill">
        <label for="salary" class="form-label">Salary</label>
        <input
          type="text"
          class="form-control"
          id="salary"
          name="salary"
          value="<%= job.salary %>"
        />
      </div>

      <div class="mb-3 flex-fill">
        <label for="totalOpening" class="form-label">Total Opening</label>
        <input
          type="number"
          class="form-control"
          id="totalOpening"
          name="totalOpening"
          value="<%= job.totalOpening %>"
        />
      </div>
    </div>

    <div class="d-flex flex-wrap">
      <select
        class="form-select mb-3 flex-fill"
        multiple
        aria-label="Multiple select example"
        id="skills"
        name="skills"
        required
      >
        <option value="HTML" selected>HTML</option>
        <option value="Excel" selected>Excel</option>
        <option value="React">React</option>
        <option value="NodeJS">NodeJS</option>
        <option value="Angular">Angular</option>
        <option value="JS">JS</option>
        <option value="Express">Express</option>
        <option value="Python">Python</option>
        <option value="SQL">SQL</option>
      </select>

      <div class="mb-3 flex-fill">
        <label for="applyBy" class="form-label">Apply By</label>
        <input
          type="date"
          class="form-control"
          id="applyBy"
          name="applyBy"
          value="<%= job.applyBy %>"
          required
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Update Job</button>
  </form>
</div>
