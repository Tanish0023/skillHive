<% if(locals.lastVisit){ %>
<div class="alert alert-primary" role="alert">
  Your Last Visit was on : <%= locals.lastVisit %>
</div>
<% } %>

<div class="main-body-job-listing">
  <div class="d-flex justify-content-evenly flex-wrap m-3">
    <% jobs.forEach((job)=>{ %>
    <div class="card" style="width: 18rem; height: 20rem">
      <div class="card-body d-flex flex-column justify-content-evenly">
        <h4 class="card-title"><%= job.companyName %></h4>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          <span><%= job.category %></span>
          <span class="text-primary"><%= job.designation %></span>
        </h6>
        <div>
          <div>
            <span><i class="fa-solid fa-location-dot"></i></span>
            <span><%= job.location %></span>
          </div>
          <div>
            <span><i class="fa-solid fa-indian-rupee-sign"></i></span>
            <span><%= job.salary %></span>
          </div>
        </div>
        <p class="card-text">
          <% (job.skills).forEach((skill)=>{ %>
          <button type="button" class="btn btn-outline-info btn-sm">
            <%=skill%>
          </button>
          <% }) %>
        </p>
        <!-- <a href="#" class="card-link"><%= job %></a> -->
        <a href="/job-listing/<%= job.id %>" class="btn btn-primary">View</a>
      </div>
    </div>
    <% }) %>
  </div>
</div>
